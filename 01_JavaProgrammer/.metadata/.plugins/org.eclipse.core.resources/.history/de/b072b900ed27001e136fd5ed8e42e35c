public class AppFigura {
	public static void main(String[] args) {
		
	}
	
	public static void mostrarFigura() {
		String resultado = "Classe da figura: " + Figura.getClass().getSimpleName()
				+ "\n√Årea da Figura: " + Figura.calcularArea();
